<resources>

    <!-- Default theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="buttonColor">@color/colorPrimary</item>
        <item name="textColor">@android:color/black</item>
        <item name="textColorInverted">@android:color/white</item>
        <item name="cardColor">@color/colorPrimary</item>
    </style>

    <!-- Dark theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNightDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/backgroundDark</item>
        <item name="buttonColor">@color/colorPrimaryDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="textColorInverted">@android:color/white</item>
        <item name="cardColor">@color/colorPrimaryNightDark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/buttonColor</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>
